<% include ../partials/header %>


<div class="container">
     <header class="jumbotron">
         <div class="container">
         <h1>Surveys</h1>
         <h3>View our surveys</h3>
         </div>
     </header>

    <a class="float-right btn btn-primary" href="/surveys/new">Add New Survey</a>
    <br></br>
    <br></br>
    
    <div class="row text-left" style="display:flex; flex-wrap: wrap;">
        <% if(surveys.length > 0){ %>
           <% surveys.forEach(function(survey) { %>
                <div class="card card-body bg-light">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3><%= survey.name %></h3>
                            <h4><%= survey.description %></h4>
                            <p>
                                <a href="/surveys/<%= survey._id %>" class="btn btn-outline-secondary">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
            <%})%>
            
         <% } else{ %> 
             <div class="container">
                 <h3 class="text-center">No Surveys Now...</h1>
             </div>
           
        <% } %>
        
    </div>
</div>

<% include ../partials/footer %>