<% include partials/header %>


<div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1 class="text-uppercase">Welcome to Surveyfy</h1>
             <h3>View our surveys</h3>
         </div>
     </header>

    <a class="float-right btn btn-primary" href="/surveys">View All Surveys</a>
    <br></br>
    <br></br>
    <h1 class="text-center">FEATURED SURVEYS</h1>
    <br></br>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% surveys.forEach(function(survey) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h3><%= survey.name %></h3>
                        <h4><%= survey.description %></h4>
                    </div>
                </div>
            </div>
        <%})%>
    </div>

</div>

<% include partials/footer %>