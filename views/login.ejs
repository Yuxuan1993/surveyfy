<% include partials/header %>
<!--<% include ./partials/header %>-->
<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <h3 class="text-left text-uppercase">Log In</h3>
      <br></br>
      <form action="/login" method="post">
          
        <div class="form-group">
          <label for="username">Email</label>
          <input type="text" class="form-control" name="username" required>
        </div>
        
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" required>
        </div>
        
        <button type="submit" class="btn btn-primary float-right">Log In</button>
        
        
        <a id="btnRightSpacing" class="btn btn-secondary float-left" href="/">Go Back</a>
        <a class="btn btn-secondary float-left" href="/register">Sign Up!</a>
        
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>